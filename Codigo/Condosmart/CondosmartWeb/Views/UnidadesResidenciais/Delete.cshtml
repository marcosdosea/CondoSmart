@model CondosmartWeb.Models.UnidadeResidencialViewModel
@{
    ViewData["Title"] = "Excluir Unidade Residencial";
}

<div class="cs-card border border-danger">
<div class="cs-card-header d-flex justify-content-between align-items-center">
    <span class="text-danger">&#128465; Confirmar Exclusão</span>
    <a asp-action="Index" class="btn btn-cs-outline btn-sm">&#8617; Voltar</a>
</div>

    <div class="cs-card-body">
        <div class="alert alert-warning">
            Atenção! Esta ação <strong>não pode ser desfeita</strong>.
        </div>

        <p class="mb-2">Você tem certeza que deseja excluir:</p>

        <div class="cs-card p-3 mb-3">
            <div class="fw-bold">@Model.Identificador</div>
            <div class="text-muted small">Condomínio: @Model.CondominioNome</div>
            @if (!string.IsNullOrEmpty(Model.MoradorNome))
            {
                <div class="text-muted small">Morador: @Model.MoradorNome</div>
            }
            @if (!string.IsNullOrEmpty(Model.Rua))
            {
                <div class="text-muted small">Endereço: @Model.Rua, @Model.Numero - @Model.Bairro</div>
            }
        </div>

        <form asp-action="Delete" method="post" class="d-flex gap-2 justify-content-end">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-cs-outline">Cancelar</a>
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
    </div>
</div>
