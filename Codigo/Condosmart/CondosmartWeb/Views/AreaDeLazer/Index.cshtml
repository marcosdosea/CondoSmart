@model IEnumerable<CondosmartWeb.Models.AreaDeLazerViewModel>
@{
    ViewData["Title"] = "Áreas de Lazer";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="fw-bold mb-0">🏊 Áreas de Lazer</h2>
        <small class="text-muted">Gerencie as áreas de lazer do condomínio</small>
    </div>

    <a asp-action="Create" class="btn btn-cs-primary">
        ➕ Nova Área de Lazer
    </a>
</div>

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>Lista</span>
        <span class="text-muted small">Total: @Model.Count()</span>
    </div>

    <div class="cs-card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center mb-0">
                Nenhuma área de lazer cadastrada.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Disponibilidade</th>
                            <th>Condomínio</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Nome</td>
                                <td>@item.Descricao</td>
                                <td>
                                    @if (item.Disponibilidade.HasValue && item.Disponibilidade.Value)
                                    {
                                        <span class="badge bg-success">Disponível</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Indisponível</span>
                                    }
                                </td>
                                <td>@item.CondominioId</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-cs-outline me-1" title="Detalhes">🔎</a>

                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-cs-outline me-1" title="Editar">✏️</a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger" title="Excluir">🗑️</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
