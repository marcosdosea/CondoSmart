@model CondosmartWeb.Models.AreaDeLazerViewModel
@{
    ViewData["Title"] = "Nova Área de Lazer";
}

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>➕ Cadastro de Área de Lazer</span>
        <a asp-action="Index" class="btn btn-cs-outline btn-sm">↩ Voltar</a>
    </div>

    <div class="cs-card-body">
        <form asp-action="Create" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12 col-lg-8">
                <label asp-for="Nome" class="form-label fw-semibold"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-4">
                <label asp-for="Disponibilidade" class="form-label fw-semibold"></label>
                <select asp-for="Disponibilidade" class="form-select">
                    <option value="">Selecione</option>
                    <option value="true">Disponível</option>
                    <option value="false">Indisponível</option>
                </select>
                <span asp-validation-for="Disponibilidade" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Descricao" class="form-label fw-semibold"></label>
                <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="CondominioId" class="form-label fw-semibold"></label>
                <select asp-for="CondominioId" class="form-select" asp-items="ViewBag.Condominios">
                    <option value="">Selecione um condomínio</option>
                </select>
                <span asp-validation-for="CondominioId" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="SindicoId" class="form-label fw-semibold"></label>
                <select asp-for="SindicoId" class="form-select" asp-items="ViewBag.Sindicos">
                    <option value="">Selecione um síndico (opcional)</option>
                </select>
                <span asp-validation-for="SindicoId" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2 justify-content-end mt-2">
                <a asp-action="Index" class="btn btn-cs-outline">Cancelar</a>
                <button type="submit" class="btn btn-cs-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
