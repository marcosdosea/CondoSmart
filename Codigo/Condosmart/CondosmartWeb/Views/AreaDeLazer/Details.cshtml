@model CondosmartWeb.Models.AreaDeLazerViewModel
@{
    ViewData["Title"] = "Detalhes da Área de Lazer";
}

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>🔎 Detalhes</span>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-cs-outline btn-sm">✏️ Editar</a>
            <a asp-action="Index" class="btn btn-cs-outline btn-sm">↩ Voltar</a>
        </div>
    </div>

    <div class="cs-card-body">
        <div class="row g-3">
            <div class="col-12 col-lg-8">
                <div class="text-muted small">Nome</div>
                <div class="fw-semibold">@Model.Nome</div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="text-muted small">Disponibilidade</div>
                <div class="fw-semibold">
                    @if (Model.Disponibilidade.HasValue && Model.Disponibilidade.Value)
                    {
                        <span class="badge bg-success">Disponível</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Indisponível</span>
                    }
                </div>
            </div>

            <div class="col-12">
                <div class="text-muted small">Descrição</div>
                <div class="fw-semibold" style="white-space: pre-wrap;">@Model.Descricao</div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="text-muted small">Condomínio</div>
                <div class="fw-semibold">@Model.CondominioId</div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="text-muted small">Síndico</div>
                <div class="fw-semibold">@(Model.SindicoId.HasValue ? Model.SindicoId.ToString() : "—")</div>
            </div>

            @if (Model.CreatedAt.HasValue)
            {
                <div class="col-12">
                    <div class="text-muted small">Criado em</div>
                    <div class="fw-semibold">@Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            }
        </div>
    </div>
</div>
