@model CondosmartWeb.Models.VisitanteViewModel
@{
    ViewData["Title"] = "Editar Visitante";
}

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>?? Editar Visitante</span>
        <a asp-action="Index" class="btn btn-cs-outline btn-sm">? Voltar</a>
    </div>

    <div class="cs-card-body">
        <form asp-action="Edit" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="col-12 col-lg-6">
                <label asp-for="Nome" class="form-label fw-semibold"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="Cpf" class="form-label fw-semibold"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-4">
                <label asp-for="Telefone" class="form-label fw-semibold"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-4">
                <label asp-for="DataHoraEntrada" class="form-label fw-semibold"></label>
                <input asp-for="DataHoraEntrada" class="form-control" />
                <span asp-validation-for="DataHoraEntrada" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-4">
                <label asp-for="DataHoraSaida" class="form-label fw-semibold"></label>
                <input asp-for="DataHoraSaida" class="form-control" />
                <span asp-validation-for="DataHoraSaida" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Observacao" class="form-label fw-semibold"></label>
                <textarea asp-for="Observacao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2 justify-content-end mt-2">
                <a asp-action="Index" class="btn btn-cs-outline">Cancelar</a>
                <button type="submit" class="btn btn-cs-primary">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}