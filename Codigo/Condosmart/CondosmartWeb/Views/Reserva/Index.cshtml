@model IEnumerable<CondosmartWeb.Models.ReservaViewModel>

@{
    ViewData["Title"] = "Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="fw-bold mb-0">📅 Reservas</h2>
        <small class="text-muted">Gerencie as reservas de áreas comuns</small>
    </div>

    <a asp-action="Create" class="btn btn-cs-primary">
        ➕ Nova Reserva
    </a>
</div>

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>Lista de Reservas</span>
        <span class="text-muted small">Total: @Model.Count()</span>
    </div>

    <div class="cs-card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center mb-0">
                Nenhuma reserva cadastrada.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Área</th>
                            <th>Morador</th>
                            <th>Início</th>
                            <th>Fim</th>
                            <th>Status</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.NomeArea</td>

                                <td>@(string.IsNullOrEmpty(item.NomeMorador) ? "-" : item.NomeMorador)</td>

                                <td>@item.DataInicio.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.DataFim.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @{
                                        // ToLower() garante que funcione com "Pendente" ou "pendente"
                                        var statusClass = item.Status?.ToLower() switch
                                        {
                                            "confirmado" => "badge bg-success",
                                            "pendente" => "badge bg-warning text-dark",
                                            "cancelado" => "badge bg-danger",
                                            "concluido" => "badge bg-info",
                                            _ => "badge bg-secondary"
                                        };
                                    }
                                    <span class="@statusClass">@item.Status</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-cs-outline me-1" title="Detalhes">🔎</a>

                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-cs-outline me-1" title="Editar">✏️</a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger" title="Excluir">🗑️</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>