@model CondosmartWeb.Models.ReservaViewModel

@{
    ViewData["Title"] = "Editar Reserva";
}

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>✏️ Editar Reserva</span>
        <a asp-action="Index" class="btn btn-cs-outline btn-sm">↩ Voltar</a>
    </div>

    <div class="cs-card-body">
        <form asp-action="Edit" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="col-12 col-lg-6">
                <label asp-for="CondominioId" class="form-label fw-semibold"></label>
                <select asp-for="CondominioId" class="form-select" asp-items="ViewBag.Condominios">
                    <option value="">Selecione o condomínio...</option>
                </select>
                <span asp-validation-for="CondominioId" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="AreaId" class="form-label fw-semibold"></label>
                <select asp-for="AreaId" class="form-select" asp-items="ViewBag.Areas"></select>
                <span asp-validation-for="AreaId" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="MoradorId" class="form-label fw-semibold"></label>
                <select asp-for="MoradorId" class="form-select" asp-items="ViewBag.Moradores">
                    <option value="">Nenhum</option>
                </select>
                <span asp-validation-for="MoradorId" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="DataInicio" class="form-label fw-semibold"></label>
                <input asp-for="DataInicio" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="DataFim" class="form-label fw-semibold"></label>
                <input asp-for="DataFim" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="Status" class="form-label fw-semibold"></label>
                <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusList"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2 justify-content-end mt-2">
                <a asp-action="Index" class="btn btn-cs-outline">Cancelar</a>
                <button type="submit" class="btn btn-cs-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}