@model CondosmartWeb.Models.ReservaViewModel

@{
    ViewData["Title"] = "Excluir Reserva";
}

<div class="cs-card border border-danger">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span class="text-danger">🗑️ Confirmar Exclusão</span>
        <a asp-action="Index" class="btn btn-cs-outline btn-sm">↩ Voltar</a>
    </div>

    <div class="cs-card-body">
        <div class="alert alert-warning">
            Atenção! Esta ação <strong>não pode ser desfeita</strong>.
        </div>

        <p class="mb-2">Você tem certeza que deseja excluir esta reserva?</p>

        <div class="cs-card p-3 mb-3 bg-light">
            <div class="row g-2">
                <div class="col-12 col-lg-6">
                    <div class="text-muted small">Área</div>
                    <div class="fw-bold fs-5">@Model.NomeArea</div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="text-muted small">Morador</div>
                    <div class="fw-bold">@Model.NomeMorador</div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="text-muted small">Data Início</div>
                    <div class="fw-bold">@Model.DataInicio.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="text-muted small">Status</div>
                    <div class="fw-bold">@Model.Status</div>
                </div>
            </div>
        </div>   
        <form asp-action="Delete" method="post" class="d-flex gap-2 justify-content-end">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-cs-outline">Cancelar</a>
            <button type="submit" class="btn btn-danger">Excluir Permanentemente</button>
        </form>
    </div>
</div>