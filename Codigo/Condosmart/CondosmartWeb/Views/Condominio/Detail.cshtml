@model CondosmartWeb.Models.CondominioViewModel
@{
    ViewData["Title"] = "Detalhes do Condomínio";
}

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>🔎 Detalhes</span>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-cs-outline btn-sm">✏️ Editar</a>
            <a asp-action="Index" class="btn btn-cs-outline btn-sm">↩ Voltar</a>
        </div>
    </div>

    <div class="cs-card-body">
        <div class="row g-3">
            <div class="col-12 col-lg-6">
                <div class="text-muted small">Nome</div>
                <div class="fw-semibold">@Model.Nome</div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="text-muted small">CNPJ</div>
                <div class="fw-semibold">@Model.Cnpj</div>
            </div>

            <div class="col-12">
                <div class="text-muted small">Endereço</div>
                <div class="fw-semibold">
                    @Model.Rua, @Model.Numero - @Model.Bairro, @Model.Cidade/@Model.Uf - CEP: @Model.Cep
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.Complemento))
                {
                    <div class="text-muted">Complemento: @Model.Complemento</div>
                }
            </div>

            <div class="col-12 col-lg-4">
                <div class="text-muted small">Unidades</div>
                <div class="fw-semibold">@Model.Unidades</div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="text-muted small">E-mail</div>
                <div class="fw-semibold">@Model.Email</div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="text-muted small">Telefone</div>
                <div class="fw-semibold">@Model.Telefone</div>
            </div>
        </div>
    </div>
</div>