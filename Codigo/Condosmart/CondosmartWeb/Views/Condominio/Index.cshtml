@model IEnumerable<CondosmartWeb.Models.CondominioViewModel>
@{
    ViewData["Title"] = "Condomínios";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="fw-bold mb-0">🏢 Condomínios</h2>
        <small class="text-muted">Gerencie os condomínios cadastrados</small>
    </div>

    <a asp-action="Create" class="btn btn-cs-primary">
        ➕ Novo Condomínio
    </a>
</div>

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>Lista</span>
        <span class="text-muted small">Total: @Model.Count()</span>
    </div>

    <div class="cs-card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center mb-0">
                Nenhum condomínio cadastrado.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>CNPJ</th>
                            <th>Cidade</th>
                            <th>UF</th>
                            <th class="text-center">Unidades</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Nome</td>
                                <td>@item.Cnpj</td>
                                <td>@item.Cidade</td>
                                <td>@item.Uf</td>
                                <td class="text-center">@item.Unidades</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-cs-outline me-1" title="Detalhes">🔎</a>

                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-cs-outline me-1" title="Editar">✏️</a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger" title="Excluir">🗑️</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>