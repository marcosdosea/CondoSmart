@model CondosmartWeb.Models.MoradorViewModel

@{
    ViewData["Title"] = "Editar Morador";
}

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>✏️ Editar Morador</span>
        <a asp-action="Index" class="btn btn-cs-outline btn-sm">↩ Voltar</a>
    </div>

    <div class="cs-card-body">
        <form asp-action="Edit" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="col-12 col-lg-6">
                <label asp-for="Nome" class="form-label fw-semibold"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="Cpf" class="form-label fw-semibold"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-4">
                <label asp-for="Rg" class="form-label fw-semibold"></label>
                <input asp-for="Rg" class="form-control" maxlength="9" placeholder="Somente números" />
                <span asp-validation-for="Rg" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-4">
                <label asp-for="Telefone" class="form-label fw-semibold"></label>
                <input asp-for="Telefone" class="form-control" maxlength="11" placeholder="Somente números" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-4">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="Rua" class="form-label fw-semibold"></label>
                <input asp-for="Rua" class="form-control" />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>

            <div class="col-6 col-lg-2">
                <label asp-for="Numero" class="form-label fw-semibold"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="col-6 col-lg-4">
                <label asp-for="Bairro" class="form-label fw-semibold"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="Cidade" class="form-label fw-semibold"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="col-6 col-lg-2">
                <label asp-for="Uf" class="form-label fw-semibold"></label>
                <input asp-for="Uf" class="form-control" maxlength="2" />
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>

            <div class="col-6 col-lg-4">
                <label asp-for="Cep" class="form-label fw-semibold"></label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Complemento" class="form-label fw-semibold"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>

            <div class="col-12 col-lg-6">
                <label asp-for="CondominioId" class="form-label fw-semibold"></label>
                <select asp-for="CondominioId" class="form-select" asp-items="ViewBag.Condominios">
                    <option value="">Selecione um condomínio</option>
                </select>
                <span asp-validation-for="CondominioId" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2 justify-content-end mt-2">
                <a asp-action="Index" class="btn btn-cs-outline">Cancelar</a>
                <button type="submit" class="btn btn-cs-primary">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
