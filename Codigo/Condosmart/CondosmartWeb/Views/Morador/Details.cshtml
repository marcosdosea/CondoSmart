@model CondosmartWeb.Models.MoradorViewModel

@{
    ViewData["Title"] = "Detalhes do Morador";
}

<div class="cs-card">
    <div class="cs-card-header d-flex justify-content-between align-items-center">
        <span>🔎 Detalhes</span>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-cs-outline btn-sm">✏️ Editar</a>
            <a asp-action="Index" class="btn btn-cs-outline btn-sm">↩ Voltar</a>
        </div>
    </div>

    <div class="cs-card-body">
        <div class="row g-3">
            <div class="col-12 col-lg-6">
                <div class="text-muted small">Nome</div>
                <div class="fw-semibold">@Model.Nome</div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="text-muted small">CPF</div>
                <div class="fw-semibold">@Model.Cpf</div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="text-muted small">RG</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Rg) ? "-" : Model.Rg)</div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="text-muted small">Telefone</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Telefone) ? "-" : Model.Telefone)</div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="text-muted small">E-mail</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Email) ? "-" : Model.Email)</div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="text-muted small">Rua</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Rua) ? "-" : Model.Rua)</div>
            </div>

            <div class="col-6 col-lg-2">
                <div class="text-muted small">Número</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Numero) ? "-" : Model.Numero)</div>
            </div>

            <div class="col-6 col-lg-4">
                <div class="text-muted small">Bairro</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Bairro) ? "-" : Model.Bairro)</div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="text-muted small">Cidade</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Cidade) ? "-" : Model.Cidade)</div>
            </div>

            <div class="col-6 col-lg-2">
                <div class="text-muted small">UF</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Uf) ? "-" : Model.Uf)</div>
            </div>

            <div class="col-6 col-lg-4">
                <div class="text-muted small">CEP</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Cep) ? "-" : Model.Cep)</div>
            </div>

            <div class="col-12">
                <div class="text-muted small">Complemento</div>
                <div class="fw-semibold">@(string.IsNullOrEmpty(Model.Complemento) ? "-" : Model.Complemento)</div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="text-muted small">Condomínio</div>
                <div class="fw-semibold">@(Model.CondominioId.HasValue ? Model.CondominioId.Value.ToString() : "-")</div>
            </div>
        </div>
    </div>
</div>
