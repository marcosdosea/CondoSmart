@model CondosmartWeb.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-3">
    <div class="col-12 col-md-6 col-xl-3">
        <div class="cs-card cs-card-body">
            <div class="cs-kpi">
                <div class="cs-kpi-circle">$</div>
                <div>
                    <div class="cs-kpi-value">R$ @Model.TotalRecebidoMes.ToString("N0")</div>
                    <div class="cs-kpi-label">Total recebido no mês</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="cs-card cs-card-body">
            <div class="cs-kpi">
                <div class="cs-kpi-circle">%</div>
                <div>
                    <div class="cs-kpi-value">@Model.TaxaInadimplencia%</div>
                    <div class="cs-kpi-label">Taxa de inadimplência</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="cs-card cs-card-body">
            <div class="cs-kpi">
                <div class="cs-kpi-circle">🏠</div>
                <div>
                    <div class="cs-kpi-value">@Model.EntradasHoje</div>
                    <div class="cs-kpi-label">Entradas registradas hoje</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="cs-card cs-card-body">
            <div class="cs-kpi">
                <div class="cs-kpi-circle">⚠️</div>
                <div>
                    <div class="cs-kpi-value">@Model.MensalidadesEmAtraso</div>
                    <div class="cs-kpi-label">Mensalidades em atraso</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12 col-lg-4">
        <div class="cs-card">
            <div class="cs-card-header">OCUPAÇÃO</div>
            <div class="cs-card-body">
                <h1 class="fw-bold mb-0">
                    @Model.UnidadesOcupadas
                    <small class="text-muted fs-6">de @Model.TotalUnidades unidades</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="cs-card">
            <div class="cs-card-header">MENSALIDADES EM ATRASO</div>
            <div class="cs-card-body">
                <h1 class="fw-bold mb-0">
                    @Model.MensalidadesEmAtraso
                    <small class="text-muted fs-6">no total</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="cs-card">
            <div class="cs-card-header">ESPAÇOS RESERVADOS</div>
            <div class="cs-card-body">
                <h1 class="fw-bold mb-0">
                    @Model.ReservasConfirmadas
                    <small class="text-muted fs-6">de @Model.TotalAreasLazer locais</small>
                </h1>
            </div>
        </div>
    </div>
</div>

@if (Model.MensalidadesEmAtraso > 0)
{
    <div class="cs-card mt-3">
        <div class="cs-card-body" style="background: var(--cs-primary); color:#fff; border-radius: var(--cs-radius);">
            <strong>@Model.MensalidadesEmAtraso mensalidade(s) em atraso pendente(s)</strong> ⚠️
        </div>
    </div>
}
