@page
@model CondosmartWeb.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrar Usuário";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white text-center py-3">
                <h4 class="mb-0">&#128101; Registrar Novo Usuário</h4>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.NomeCompleto" class="form-label fw-semibold"></label>
                        <input asp-for="Input.NomeCompleto" class="form-control" placeholder="Nome completo" />
                        <span asp-validation-for="Input.NomeCompleto" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="usuario@exemplo.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Role" class="form-label fw-semibold"></label>
                        <select asp-for="Input.Role" class="form-select">
                            <option value="">-- Selecione um perfil --</option>
                            <option value="Sindico">Síndico</option>
                            <option value="Morador">Morador</option>
                            @if (User.IsInRole("Admin"))
                            {
                                <option value="Admin">Admin</option>
                            }
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Mínimo 8 caracteres" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Repita a senha" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Registrar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
