@page
@model CondosmartWeb.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Entrar";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="cs-auth-card">

    <div class="cs-auth-header">
        <div class="cs-auth-brand-badge">C</div>
        <h1>CONDOMÍNIO</h1>
        <p>CondoSmart — Gestão inteligente</p>
    </div>

    <div class="cs-auth-body">

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger py-2 small" role="alert">
                &#9888; @TempData["ErrorMessage"]
            </div>
        }

        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       id="floatingEmail"
                       autocomplete="username"
                       placeholder="seu@email.com" />
                <label for="floatingEmail">&#9993; E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password"
                       class="form-control"
                       id="floatingPassword"
                       autocomplete="current-password"
                       placeholder="Senha" />
                <label for="floatingPassword">&#128274; Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex align-items-center justify-content-between mb-4">
                <div class="form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label small text-muted" for="rememberMe">Lembrar de mim</label>
                </div>
            </div>

            <button type="submit" class="btn btn-cs-login w-100">
                Entrar no sistema
            </button>
        </form>

        <hr class="my-4" />

        <div class="alert alert-info py-2 small mb-0" role="alert">
            <strong>&#128272; Acesso padrão:</strong><br />
            E-mail: <code>admin@condosmart.com</code><br />
            Senha: <code>Admin@123456!</code>
        </div>

    </div>

    <div class="cs-auth-footer">
        &copy; 2026 CondoSmart
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
